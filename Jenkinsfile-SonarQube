pipeline {
    agent {
        label 'master'
    }

    options {
        ansiColor('xterm')
    }

    stages {
        stage('Code analyze') {
            tools {
                jdk "openjdk-17"
            }
            steps {
                withSonarQubeEnv(installationName: 'sonar') {
                    sh "chmod +x gradlew"
                    sh "./gradlew sonarqube"
                }
            }
        }
    }
}